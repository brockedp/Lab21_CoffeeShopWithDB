
@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<Lab21_CoffeeShopWithDatabase.Models.Item>

<h1>Index</h1>
<table class="table">
    <tr>
        <th>Name </th>
        <th>Description </th>
        <th>Price </th>
        
    </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td>@item.Name </td>
        <td>@item.Description </td>
        <td>$@item.Price </td>
        @if (ViewBag.Login != null)
        {
            <td><a href="/Database/Buy?Id=@item.Id"><input type="submit" value="Buy" class="btn-block" /></a></td>

        }
    </tr>

        }

</table>


